android_app {
    name: "DeviceExtras",

    defaults: [
        "SettingsLibDefaults",
    ],
    certificate: "platform",
    platform_apis: true,
    system_ext_specific: true,
    privileged: true,
    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
    ],
    static_libs: [
        "androidx.annotation_annotation",
        "androidx.core_core",
        "androidx.core_core-ktx",
        "androidx.fragment_fragment-ktx",
        "androidx.lifecycle_lifecycle-runtime-ktx",
        "androidx.lifecycle_lifecycle-service",
        "androidx.preference_preference",
        "kotlinx_coroutines_android",
        "vendor_support",
    ],
    required: [
        "privapp_whitelist_DeviceExtras",
    ],
    resource_dirs: ["res"],
    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },
}

prebuilt_etc {
    name: "privapp_whitelist_DeviceExtras",
    sub_dir: "permissions",
    src: "privapp-permissions-DeviceExtras.xml",
    filename_from_src: true,
    system_ext_specific: true,
}

sh_binary {
    name: "tri-state-key-calibrate",
    init_rc: ["tri-state-key-calibrate.rc"],
    src: "tri-state-key-calibrate.sh",
    vendor: true,
}
