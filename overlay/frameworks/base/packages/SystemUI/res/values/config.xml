<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Respect drawable/rounded.xml intrinsic size for multiple radius corner path customization -->
    <bool name="config_roundedCornerMultipleRadius">true</bool>

    <!-- Doze: does this device support STATE_DOZE?  -->
    <bool name="doze_display_state_supported">true</bool>
    
    <!-- Type of a sensor that provides a low-power estimate of the desired display
         brightness, suitable to listen to while the device is asleep (e.g. during
         always-on display) -->
    <string name="doze_brightness_sensor_type" translatable="false">android.sensor.light</string>

     <integer-array name="config_doze_brightness_sensor_to_brightness">
        <item>-1</item>
        <item>100</item>
        <item>110</item>
        <item>130</item>
        <item>150</item>
        <item>170</item>
    </integer-array>
    
    <integer-array name="config_doze_brightness_sensor_to_scrim_opacity">
        <item>-1</item>
        <item>0</item>
        <item>0</item>
        <item>0</item>
        <item>0</item>
        <item>0</item>
    </integer-array>

    <!-- Should we vibrate on an icon animation of the shelf. This should only be active if the
     vibrator is capable of subtle vibrations -->
    <bool name="config_vibrateOnIconAnimation">true</bool>
    <integer name="config_udfpsEnrollProgressBar" translatable="false">100</integer>

    <!-- Whether to pulse onFingerDown actions while in AOD. -->
    <bool name="config_pulseOnFingerDownInAod">true</bool>
</resources>
